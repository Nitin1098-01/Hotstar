<h1>Welcome to HOTSTAR</h1>
<p>Bringing the best entertainment to your hands</p>
<ul>
<% if user_signed_in? %>
<li>
<%= link_to "Sign Out", destroy_user_session_path, method: :delete%>
</li>
<% if current_user.admin %>
    <li><%= "Admin Logged IN" %></li>
    <% end %>

<li>
<%= current_user.email %>
</li>
<li>
<%= link_to "Edit Account", edit_user_registration_path %>
</li>
 <%= form_tag home_index_path, :method => 'get'  do %>
   <%= text_field_tag :search, params[:search]%>
   <%= submit_tag "Search", :name => nil  %>
 <% end %>
<table>
  <thead>
    <tr>
      <th>Channel</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @show %>
    <% @show.each do |show| %>
      <tr>
        <td><%= show.channel.name %></td>
        <td><%= show.name %></td>
        <td><%= link_to 'Add to Favourites', show %></td>
        
      </tr>
    
    <% end %>
 <% else %>    
    <tr>
        <td><%= @show %></td>

        
      </tr>
    
      <% end %>
    
  </tbody>
</table>
<% else %>
<li>
<%= link_to "Sign In", new_user_session_path %>

</li>
<li>
<%= link_to "Sign Up", new_user_registration_path %>

</li>

<% end %>
</ul>



